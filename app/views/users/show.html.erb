
<div class="content">

<p>
    <strong>Name:</strong>
    <%= @user.first_name %>
    <%= @user.last_name %>
</p>

<p>
    <strong>Liquid Gold:</strong>
    <%= @user.basal_insulin%>
    <%= @user.bolus_insulin%>
</p>
<div class="divider"></div>
<div class="row">
<div class="col s4">
<p>
    <strong>Recent Bolus'</strong> <br>
    <% @user.bolus_doses.order(id: :desc).limit(6).each do |dose| %>
      <%= dose.amount %>u - 
      <%= dose.time_stamp.strftime("%l:%M%p").strip %><br>
    <% end %>
</p>
</div>
<div class="col s4">
<p>
    <strong>Basal Records</strong> <br>
    <% @user.basal_doses.order(id: :desc).limit(4).each do |dose| %>
      <%= dose.amount %>u - 
      <%= dose.time_stamp.strftime("%l:%M%p").strip %><br>
    <% end %>
</p>
</div>
<div class="col s4">
<p>
    <strong>Recent BGs</strong> <br>
     <% @user.glucose_readings.each do | reading | %>
      <%= reading.bg_value %>
      <%= reading.time_stamp.strftime("%l:%M%p").strip %>
    <% end %>
</p>
</div>
</div>
<div class="row">
<div class="col s4">
<%= link_to 'Add a Bolus Dose', new_user_bolus_dose_path(@user) %>
</div>
<div class="col s4">
<%= link_to 'Add a Basal Dose', new_user_basal_dose_path(@user) %>
</div>
<div class="col s4">
<%= link_to 'Back', welcome_index_path %>
</div>
</div>
<br>

</div>